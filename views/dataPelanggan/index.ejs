<!DOCTYPE html>
<html lang="en">

<%- include('../partials/header.ejs') %>
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../partials/sidebar.ejs') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('../partials/topbar.ejs') %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Data Pelanggan</h1>
                        <button class="btn btn-primary" data-toggle="modal" data-target="#modalTambahData">
                            Tambah Data
                        </button>
                    </div>

                    <!-- Tabel Data Pelanggan -->
                    <% if (q) { %>
                        <p>Hasil pencarian untuk "<%= q %>":</p>
                    <% } %>

                    <!-- Wrap table in a div with table-responsive class -->
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center">No</th>
                                    <th class="text-center">IDPEL</th>
                                    <th class="text-center">Nama Pelanggan</th>
                                    <th class="text-center">Email</th>
                                    <th class="text-center">No Telepon</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (data.length > 0) { %>
                                    <% data.forEach(function(item, index) { %>
                                        <tr>
                                            <td class="text-center"><%= index + 1 %></td>
                                            <td class="text-center"><%= item.IDPEL %></td>
                                            <td><%= item.Nama_Pelanggan %></td>
                                            <td><%= item.Email %></td>
                                            <td><%= item.No_Tlf %></td>
                                            <td class="text-center">
                                                <a href="/data-pelanggan/<%= item.IDPEL %>/edit" class="btn btn-warning btn-sm">Edit</a>
                                                <form action="/data-pelanggan/<%= item.IDPEL %>?_method=DELETE" method="POST" style="display:inline;">
                                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                </form>
                                                <a href="/data-pelanggan/<%= item.IDPEL %>/upload" class="btn btn-info btn-sm">Upload</a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="text-center">Data tidak ditemukan.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('../partials/footer.ejs') %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <%- include('../partials/logout_modal.ejs') %>

    <!-- Bootstrap core JavaScript-->
    <%- include('../partials/all_javascript.ejs') %>

    <!-- Modal Form Tambah Data Pelanggan -->
    <div class="modal fade" id="modalTambahData" tabindex="-1" aria-labelledby="modalTambahDataLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTambahDataLabel">Tambah Data Pelanggan</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/data-pelanggan" method="post">
                        <div class="form-group">
                            <label for="IDPEL">IDPEL:</label>
                            <input type="text" id="IDPEL" name="IDPEL" class="form-control" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="Nama_Pelanggan">Nama Pelanggan:</label>
                            <input type="text" id="Nama_Pelanggan" name="Nama_Pelanggan" class="form-control" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="Email">Email (pisahkan dengan koma jika lebih dari satu):</label>
                            <input type="text" id="Email" name="Email" class="form-control" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="No_Tlf">No Telepon:</label>
                            <input type="tel" id="No_Tlf" name="No_Tlf" class="form-control" required>
                        </div>
                        
                        <input type="submit" value="Submit" class="btn btn-primary">
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap JavaScript -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

</body>
</html>
