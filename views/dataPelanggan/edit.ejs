<!DOCTYPE html>
<html lang="en">

<%- include('../partials/header.ejs', { q: '' }) %>
<body id="page-top">

    <div id="wrapper">
        <%- include('../partials/sidebar.ejs', { q: '' }) %>
        
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <%- include('../partials/topbar.ejs', { q: '' }) %>

                <div class="container-fluid">
                    <h1 class="h3 mb-4 text-gray-800">Edit Data Pelanggan</h1>

                    <form action="/data-pelanggan/<%= data.IDPEL %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <label for="IDPEL">IDPEL:</label>
                            <input type="text" id="IDPEL" name="IDPEL" class="form-control" value="<%= data.IDPEL %>" required>
                        </div>
                        <div class="form-group">
                            <label for="Nama_Pelanggan">Nama Pelanggan:</label>
                            <input type="text" id="Nama_Pelanggan" name="Nama_Pelanggan" class="form-control" value="<%= data.Nama_Pelanggan %>" required>
                        </div>
                        <div class="form-group">
                            <label for="Email">Email:</label>
                            <input type="text" id="Email" name="Email" class="form-control" value="<%= data.Email %>" required>
                        </div>
                        <div class="form-group">
                            <label for="No_Tlf">No Telepon:</label>
                            <input type="tel" id="No_Tlf" name="No_Tlf" class="form-control" value="<%= data.No_Tlf %>" required>
                        </div>
                        <input type="submit" value="Update" class="btn btn-primary">
                    </form>
                </div>
            </div>

            <%- include('../partials/footer.ejs', { q: '' }) %>
        </div>
    </div>

    <%- include('../partials/all_javascript.ejs', { q: '' }) %>
</body>
</html>
